@page
@model LegalSecure.Pages.Cases.CaseIndexModel
@{
}


@{
    ViewData["Title"] = "Courses";
}

<h1>Courses</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CourseVM[0].ClientID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CourseVM[0].FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CourseVM[0].LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CourseVM[0].CaseDescription)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.CourseVM)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ClientID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CaseDescription)
                </td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.ClientID">Edit</a> |
                    <a asp-page="./Details" asp-route-id="@item.ClientID">Details</a> |
                    <a asp-page="./Delete" asp-route-id="@item.ClientID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>